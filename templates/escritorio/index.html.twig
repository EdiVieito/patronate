{% extends 'base-panel.html.twig' %}
{% block main %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Cursos</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="escritorio/anadir" class="btn btn-primary"><i class="fas fa-plus"></i><span class="hidden-xs pl-4"> Añadir nuevo curso</span></a>
          </div>
        </div>
</div>
<div class="container mt-4 table-responsive">
        <table class="table  table-striped table-sm">
          <thead>
            <tr>
              <th scope="col"><span class="px-2">Título</span></th>
              <th scope="col">Descripción</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
          {% for curso in cursos %}
            <tr>
              <td><span class="px-2">{{curso.titulo}}</span></td>
              <td><span class="text-truncate">{{curso.descripcion|raw}}</span>
              </td>
              <td>
              <a href="/actualizar/curso/{{curso.id}}" class="btn btn-info text-light">
              <i class="fas fa-edit"></i><span class="sm-hidden xs-hidden"> Editar</span>
              </a> 
              <a href="/eliminar/curso/{{curso.id}}" class="btn btn-danger">
              <i class="fas fa-trash-alt"></i><span class="sm-hidden xs-hidden"> Eliminar</span></a></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
</div>
{% endblock %}
